<!DOCTYPE html>
<html>
  <head>
    <title>MommyMinute</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav>
  <ul>
    <!-- Neutral Links -->
    <li><%= link_to "Home", root_path %></li>
  
    <% unless logged_in? %>
      <li><%= link_to "Signup", signup_path %></li>
    <% else %>
      <li><%= link_to "Mommy Minute Blogs", blogs_path %></li>
      <li><%= link_to "Create Mommy Minute", new_blog_path %></li>
      <li><%= link_to "Logout", logout_path %></li>
    <% end %>
    
    
  </ul>
  </nav>

    <%= yield %>
  </body>
</html>
